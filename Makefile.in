ALL=vobla

DOXYGEN=doxygen
SCALADOC=scaladoc

export SCALA_HOME=@SCALA_HOME@
export ANTLR_HOME=@ANTLR_HOME@
export CLASSPATH=${ANTLR_HOME}/ant-antlr3.jar:${ANTLR_HOME}/antlr3.jar

export PENCIL_HOME=@PENCILDIR@

all: ${ALL}

vobla:
	ant dist -Dpencil-loc=${PENCIL_HOME}

check:${ALL:%=%-check} blas-check

%-check:
	cd testsuite/ && runtest --tool $*

clean:${ALL:%=%-clean} docs-clean blas-clean
	echo ${CLEAN}

vobla-clean:
	ant clean -Dpencil-loc=${PENCIL_HOME}

blas-clean:
	make -C testsuite/blastest/ clean

distclean: clean
	rm -f config.status config.log vobla Makefile

blas-check:
	make -C testsuite/blastest/ blastestfiles
	make -C testsuite/blastest/ PENCIL_HOME=${PENCIL_HOME}

DOCS=${ALL}

docs:${DOCS:%=%-docs}

vobla-docs:
	mkdir -p docs/vobla
	$(DOXYGEN) vobla.doxygen


# System level scaladoc command is required to generate scala documentation.

docs-clean:${DOCS:%=%-docs-clean}

%-docs-clean:
	rm -rf "docs/$*/*"

.PHONY: ${ALL}
